<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/enterNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input a decimal number and click the button below to display the area of a circle in the bottom text view."/>
    <Button
        android:id="@+id/PerformTaskinThreadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Area of Circle"/>
    <TextView
        android:id="@+id/displayAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No value calculated yet."/>

</LinearLayout>