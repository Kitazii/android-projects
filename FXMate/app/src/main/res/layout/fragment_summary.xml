<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/summaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency Summary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="4dp" />

    <!-- Updated timestamp -->
    <TextView
        android:id="@+id/updatedTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Updated: --:--"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp" />

    <!-- USD Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/usdCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/usdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="United States Dollar"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/usdRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 GBP = 1,26 USD"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#FFB6B6"
            android:padding="16dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- EUR Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/eurCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EUR"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/eurName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Euro"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/eurRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 GBP = 1,17 EUR"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#FFE082"
            android:padding="16dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- JPY Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/jpyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JPY"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/jpyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Japanese Yen"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/jpyRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 GBP = 148,9 JPY"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#A5D6A7"
            android:padding="16dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Show All Currencies Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/showAllButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show All Currencies"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        style="@style/Widget.Material3.Button" />

    <!-- Loading Spinner -->
    <ProgressBar
        android:id="@+id/loadingSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

    <!-- Status TextView for messages -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16sp"
        android:text="Loading..."
        android:visibility="gone" />

</LinearLayout>
