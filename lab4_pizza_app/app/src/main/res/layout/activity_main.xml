<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/vwSwitch"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/pizza_logo"
            android:layout_marginBottom="20dip"
            android:contentDescription="Pizza Logo"
            android:id="@+id/pizzaLogo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:text="Enter Email address:"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/screen1Label"
            />
        <EditText
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:hint="email@example.com"
            android:inputType="textEmailAddress"
            android:textSize="18dip"
            android:textColor="@color/text_dark"
            android:textColorHint="@color/pizza_orange"
            android:layout_gravity="center"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:id="@+id/emailInput"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create your pizza"
            android:textSize="20dip"
            android:textColor="@color/white"
            android:backgroundTint="@color/pizza_red"
            android:layout_gravity="center"
            android:id="@+id/screen1Button"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:text="This is screen 2"
            android:layout_gravity="center"
            android:id="@+id/screen2Label"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:text="Previous Screen"
            android:layout_gravity="center"
            android:id="@+id/screen2Button"
            />
    </LinearLayout>
</ViewSwitcher>