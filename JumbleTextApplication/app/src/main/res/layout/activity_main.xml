<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <!-- Centered bordered panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/panel_container"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@drawable/input_box"
            android:hint="@string/user_entered_text"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/reverseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_outline"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/reverse_words"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/outputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/output_box"
            android:padding="12dp"
            android:text="@string/reversed_text"
            android:textColor="@color/Black"
            android:textSize="16sp"/>

    </LinearLayout>
</merge>